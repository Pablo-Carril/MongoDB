<div class="col-9 mx-auto border">

<h1>Notas</h1>
  
  <!-- Formulario para agregar una nueva nota -->
  <form action="/notas" method="POST">
    <textarea name="contenido" rows="4" cols="50" placeholder="Escribe tu nota aquÃ­..." required></textarea><br>
    <button type="submit">Agregar Nota</button>
  </form>

  <!-- Lista de notas -->
  {{#each notas}}
    <div class="nota">
      <p>{{this.contenido}}</p>
      <small>{{this.fecha}}</small>
    </div>
  {{/each}}
  
</div>

 <style>
    .nota {
      border: 1px solid #ccc;
      padding: 10px;
      margin-bottom: 10px;
    }
  </style>